pkgname=linvst-bin
pkgver=2.4.1
pkgrel=1
provides=('linvst')
conflicts=('linvst')

_pkgname=LinVst-$pkgver-Debian-Stretch

pkgdesc="Bridge that adds support for Windows vst's to be used in Linux vst capable DAW's."
url="https://github.com/osxmidi/LinVst"
arch=('x86_64')
license=('GPL')

depends=('wine' 'gtk3')

source=("https://github.com/osxmidi/LinVst/releases/download/2.4/${_pkgname}.zip")
sha256sums=('1a722c313b0e4b95a32e6589bbcd96582a23a44ba19f49fd6917edc6fea6fc91')

package() {
	install -d "${pkgdir}/usr/bin"
	install -m 644 "${srcdir}/${_pkgname}/embedded-version/lin-vst-server"* "${pkgdir}/usr/bin/"
	install -Dm 644 "${srcdir}/${_pkgname}/embedded-version/linvst.so" "${pkgdir}/usr/share/LinVst/linvst.so"
	install -Dm 755 "${srcdir}/${_pkgname}/convert/linvstconvert" "${pkgdir}/usr/bin/linvstconvert"
}
