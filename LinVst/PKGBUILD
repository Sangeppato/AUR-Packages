pkgname=linvst-bin
pkgver=2.4.1
pkgrel=1
conflicts=('linvst')

_pkgname=LinVst-$pkgver-Debian-Stretch

pkgdesc="Bridge that adds support for Windows vst's to be used in Linux vst capable DAW's."
url="https://github.com/osxmidi/LinVst"
arch=('x86_64')
license=('GPL')

depends=('wine' 'gtk3')

source=("https://github.com/osxmidi/LinVst/releases/download/2.4/${_pkgname}.zip")
sha256sums=('1a722c313b0e4b95a32e6589bbcd96582a23a44ba19f49fd6917edc6fea6fc91')

package() {
	mkdir -p "${pkgdir}/usr/bin"
	mkdir -p "${pkgdir}/usr/lib/vst"
	cp "${srcdir}/${_pkgname}/embedded-version/lin-vst-server"* "${pkgdir}/usr/bin/"
	cp "${srcdir}/${_pkgname}/embedded-version/linvst.so" "${pkgdir}/usr/lib/vst/"
	cp "${srcdir}/${_pkgname}/convert/linvstconvert" "${pkgdir}/usr/bin/"
}
